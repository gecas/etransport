{% extends 'base.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
{% endblock %}
{% block body %}
    <div class="container">
        <div class="col-md-8" style="margin: 0 auto">
            <pre>
                {{ app.session | json_encode }}
            </pre>
            <div class="form-wrapper">
                <h3 class="text-center">Order flowers</h3>
                <form class="form-signin" method="POST" action="/flowers/order">
                    <div class="form-label-group">
                        <input type="text" id="fullName" name="name" class="form-control" placeholder="Full name"
                               required=""
                               autofocus="">
                        <label for="fullName">Full name</label>
                    </div>
                    <div class="form-label-group">
                        <input type="email" id="inputEmail" name="email" class="form-control"
                               placeholder="Email address" required=""
                               autofocus="">
                        <label for="inputEmail">Email address</label>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="addressInput" name="address" class="form-control" placeholder="Address"
                               autofocus="">
                        <label for="addressInput">Address</label>
                    </div>
                    <div class="form-label-group">
                        <input type="text" id="deliveryInput" name="deliver_on" class="form-control"
                               placeholder="Delivery time"
                               required=""
                               autofocus="">
                        <label for="deliveryInput">Select delivery time</label>
                    </div>

                    <div class="form-label-group">
                        <label for="">Select you flowers:</label> <br><br>
                        <div class="owl-carousel owl-theme">
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://richmedia.ca-richimage.com/ImageDelivery/imageService?profileId=12026540&id=1127763&recipeId=728"
                                            title="Roses"
                                            alt="Roses">
                                    <input type="checkbox" name="flowers[]" value="roses">
                                </div>
                            </div>
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://www.almanac.com/sites/default/files/styles/primary_image_in_article/public/image_nodes/tulips.jpg?itok=LNoBfvOX"
                                            title="Tulips"
                                            alt="Tulips">
                                    <input type="checkbox" name="flowers[]" value="tulips">
                                </div>
                            </div>
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/97/Jasminbl%C3%BCten2.jpg/1024px-Jasminbl%C3%BCten2.jpg?1590062966125"
                                            title="Jasmin"
                                            alt="">
                                    <input type="checkbox" name="flowers[]" value="jasmin">
                                </div>
                            </div>
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://assets.eflorist.com/assets/products/PHR_/TPL05-1A.jpg" alt=""
                                            title="Orchid">
                                    <input type="checkbox" name="flowers[]" value="orchid">
                                </div>
                            </div>
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://i.pinimg.com/originals/ee/4a/59/ee4a597bf186029e6b1de0502639644e.jpg"
                                            title="Carnation" alt="">
                                    <input type="checkbox" name="flowers[]" value="carnation">
                                </div>
                            </div>
                            <div class="flowers-list">
                                <div class="item">
                                    <img
                                            src="https://cdn.britannica.com/45/5645-050-B9EC0205/head-treasure-flower-disk-flowers-inflorescence-ray.jpg"
                                            title="Ray flower" alt="">
                                    <input type="checkbox" name="flowers[]" value="ray">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-lg btn-warning btn-block" type="submit">Order</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.1/moment.min.js"></script>
    <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <script type="text/javascript">
        $("#deliveryInput").datetimepicker({
            format: "yyyy-mm-dd hh:ii"
        });
        $('.owl-carousel').owlCarousel({
            loop: true,
            margin: 10,
            nav: true,
            responsive: {
                0: {
                    items: 1
                },
                600: {
                    items: 3
                },
                1000: {
                    items: 5
                }
            }
        });

        $('.label-container').on('click', function (evt) {
            evt.stopPropagation();
            evt.preventDefault();
            if ($(this).hasClass('active-label')) {
                $(this).removeClass('active-label');
            } else {
                $(this).addClass('active-label');
            }
        });
    </script>
{% endblock %}